<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bighome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBarPlus" />
        <activity
            android:name=".mvp.login.LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/MyEditTextStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.main.neighbor.ChatActivity"
            android:theme="@style/AppTheme.NoActionBarPlus" />
        <activity
            android:name=".mvp.main.mine.SettingActivity"
            android:theme="@style/AppTheme.NoActionBarPlus" />
        <activity android:name=".mvp.BaseActivity" />
        <activity
            android:name=".mvp.main.mine.DeveloperActivity"
            android:theme="@style/AppTheme.NoActionBarPlus" />
        <activity
            android:name=".mvp.main.mine.InformationActivity"
            android:theme="@style/AppTheme.NoActionBarPlus" />
        <activity android:name=".mvp.SecondBaseActivity"></activity>
    </application>

</manifest>